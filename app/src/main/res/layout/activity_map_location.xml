<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/maptoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        tools:context=".map_location" />

    <Button
        android:id="@+id/btn_selectlocation"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="Done" />

    <Button
        android:id="@+id/Cancel_bt"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="CANCEL" />

</LinearLayout>